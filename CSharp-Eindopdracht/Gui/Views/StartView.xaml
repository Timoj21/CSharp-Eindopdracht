<UserControl x:Class="Gui.Views.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gui.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="enterNameLabel" Grid.Row="0" Height="30" Width="200" Content="Enter name: "/>
        <TextBox x:Name="nameTextBox" Grid.Row="0" Height="30" Width="200"/>
        <Button x:Name="joinGameButton" Grid.Row="1" Content="Join Game"/>
        <Button x:Name="hostGameButton" Grid.Row="2" Content="Host Game"/>
    </Grid>
</UserControl>
